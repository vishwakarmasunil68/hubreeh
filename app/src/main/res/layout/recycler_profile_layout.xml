<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/splash_drawable">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10">

        <FrameLayout
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center">
            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageView1"
                android:src="@color/colorGrey"
                android:scaleType="fitCenter"
                app:riv_corner_radius="5dp" />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="S"
                android:fontFamily="@font/lato_regular"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:textSize="30sp"/>
        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mitch Thomas"
                android:fontFamily="@font/lato_regular"
                android:textSize="@dimen/sp_17"
                android:textStyle="bold"
                android:paddingStart="@dimen/dp_15"
                android:textColor="@color/colorWhite"
                tools:ignore="RtlSymmetry" />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/ivBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_regular"
                android:text="Hey i'm interested in your job....."
                android:textColor="@color/colorLightGrey"
                android:textSize="@dimen/sp_16"
                android:paddingStart="@dimen/dp_15"
                tools:ignore="RtlSymmetry" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dp_15"
                tools:ignore="RtlSymmetry">
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_bell"
                    android:layout_gravity="center"
                    android:contentDescription="@string/arrow"/>
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tvTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_regular"
                    android:text="6h 1m ago"
                    android:textSize="@dimen/sp_14"
                    android:layout_gravity="center"
                    android:paddingStart="@dimen/dp_05"
                    android:textColor="@color/colorPrimary"
                    android:padding="@dimen/dp_05"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_drawable"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_05"
                android:layout_marginTop="@dimen/dp_05"
                android:text="Payments Methods"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_17"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_payment_method"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_15"
                app:mrl_rippleAlpha="0.2"
                app:mrl_rippleColor="@color/colorPink"
                app:mrl_rippleDelayClick="true"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="true">

                <android.support.v7.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:text="Add Another Payment Method"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBlack" />


            </com.balysv.materialripple.MaterialRippleLayout>


            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_05"
                android:layout_marginTop="@dimen/dp_05"
                android:text="Set your preferred payment method"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_17"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/sp_preferred__payment_method"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/mybg" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@color/colorGrey" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_05"
                android:layout_marginTop="@dimen/dp_05"
                android:text="Finance Settings"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_17"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_05"
                android:layout_marginTop="@dimen/dp_05"
                android:text="My Currency"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_15" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/sp_currency"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/mybg" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_05"
                android:layout_marginTop="@dimen/dp_15"
                android:text="Taxes"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_15" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_05"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/background_btn_starter_page_pressed"
                android:padding="@dimen/dp_10"
                android:text="Taxes"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/sp_15" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_05"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/background_btn_starter_page_pressed"
                android:padding="@dimen/dp_10"
                android:text="Rate"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/sp_15" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_05"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/background_btn_starter_page_pressed"
                android:padding="@dimen/dp_10"
                android:text="Taxe ID or Company No."
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/sp_15" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@color/colorGrey" />

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_20"
                app:mrl_rippleAlpha="0.2"
                app:mrl_rippleColor="@color/colorPink"
                app:mrl_rippleDelayClick="true"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="true">

                <android.support.v7.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:text="Save Settings"
                    android:textColor="@color/colorBlack" />

            </com.balysv.materialripple.MaterialRippleLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>
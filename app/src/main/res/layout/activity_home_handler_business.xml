<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.git.hubreeh.view.employer.activity.HomeHandlerBusiness">


    <include layout="@layout/toolbar_homescreen"/>


    <android.support.design.widget.TabLayout
        android:id="@+id/tabs_business_home_handler"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        app:tabGravity="fill"
        app:tabMode="fixed"
        android:background="@drawable/gradient_toolbar_background"
        app:tabIndicatorColor="@color/colorWhite"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager_business"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>

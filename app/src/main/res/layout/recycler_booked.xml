<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/linear_booked_root">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp"
        android:clipToPadding="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_15"
            android:background="@color/colorWhite">
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvBidding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bidding"
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="@dimen/sp_16"
                android:background="@drawable/bidding_background"
                android:padding="@dimen/dp_05"
                android:layout_marginTop="@dimen/dp_10"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_booked_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_of_the_job"
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:textSize="@dimen/sp_18"
                android:padding="@dimen/dp_05"
                android:layout_marginTop="@dimen/dp_05"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/avg_bid_6400_aed_14bids_4days_left"
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/colorLightGrey"
                android:textSize="@dimen/sp_16"
                android:padding="@dimen/dp_05"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_05"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
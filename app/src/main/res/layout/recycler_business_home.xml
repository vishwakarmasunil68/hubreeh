<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp"
        android:clipToPadding="true"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_15"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_15"
            android:background="@color/colorWhite">
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_business_home_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flat Tyre @ garhood... need urgent services"
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp_16"
                android:padding="@dimen/dp_05"
                android:layout_marginTop="@dimen/dp_10"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_business_home_proposals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Danial Byan"
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:textSize="@dimen/sp_16"
                android:padding="@dimen/dp_05"
                android:layout_marginTop="@dimen/dp_05"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_business_home_postedon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bid Amount:- 50USD"
                android:fontFamily="@font/lato_regular"
                android:textColor="@color/colorLightGrey"
                android:textSize="@dimen/sp_15"
                android:padding="@dimen/dp_05"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_05"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
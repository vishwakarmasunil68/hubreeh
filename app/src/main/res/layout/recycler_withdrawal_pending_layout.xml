<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_05"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="@dimen/dp_05"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal"
                android:weightSum="1.0">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".70"
                    android:text="Requested At"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_15" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_withdrawal_pending_requested_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".30"
                    android:gravity="center"
                    android:text="22-Nov-2018, 20:11PM"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal"
                android:weightSum="1.0">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".70"
                    android:text="Amount"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_15" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_withdrawal_pending_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".30"
                    android:gravity="center"
                    android:paddingStart="@dimen/dp_05"
                    android:paddingEnd="@dimen/dp_05"
                    android:maxLines="3"
                    android:text="\u20B9 20000"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal"
                android:weightSum="1.0">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".70"
                    android:text="Details"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_15" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_withdrawal_pending_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".30"
                    android:gravity="center"
                    android:text="Reason for pending amount"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal"
                android:weightSum="1.0">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".70"
                    android:text="Status"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_15" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_withdrawal_pending_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".30"
                    android:gravity="center"
                    android:text="In Process"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:layout_marginBottom="@dimen/dp_10">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".70"
                    android:text="Processing Date"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_15" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_withdrawal_pending_processing_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".30"
                    android:gravity="center"
                    android:text="1-Dec-2019"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>
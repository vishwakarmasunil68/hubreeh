<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/splash_drawable"
    android:orientation="vertical"
    android:padding="@dimen/dp_15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imageView1"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@color/colorGrey"
                app:riv_corner_radius="5dp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/lato_regular"
                android:gravity="center"
                android:text="@string/s"
                android:textColor="@color/colorWhite"
                android:textSize="30sp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_online_status"
                android:layout_width="10dp"
                android:visibility="gone"
                android:layout_height="10dp"
                android:src="@color/colorPrimary" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_msg_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".70"
                    android:fontFamily="@font/lato_regular"
                    android:paddingStart="@dimen/dp_15"
                    android:text="@string/mitch_thomas"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    tools:ignore="RtlSymmetry" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_msg_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".30"
                    android:fontFamily="@font/lato_regular"
                    android:paddingStart="@dimen/dp_15"
                    android:text="@string/_3_51_pm"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvLastMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_regular"
                android:paddingStart="@dimen/dp_15"
                android:text="@string/hey_i_m_interested_in_your_job"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_14"
                tools:ignore="RtlSymmetry" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/colorGrey" />
</LinearLayout>
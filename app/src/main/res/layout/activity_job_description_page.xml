<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_10"
                android:text="Flat Tyer @ Garhood ...Urgent Plz"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_16" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:orientation="horizontal"
                        android:weightSum="1.0">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/tvBudget"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight=".50"
                            android:gravity="center"
                            android:text="150-180 AED"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/sp_16" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".50"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/colorPrimary"
                                android:text="Open"
                                android:textAllCaps="true"
                                android:textColor="@color/colorBlack" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="@dimen/dp_15"
                        android:background="@color/colorGrey" />

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_05"
                        android:text="Job Description :"
                        android:textColor="@color/colorPurpule"
                        android:textSize="@dimen/sp_16" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tvDec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_05"
                        android:text="I am having a flat tyre. Need to replace it on the same place.I have a ready spare.My car model is Cheverolet.I am having a flat tyre. Need to replace it on the same place.I have a ready spare.My car model is Cheverolet."
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/sp_13" />

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:padding="@dimen/dp_05"
                        android:text="Uploaded Media:"
                        android:textColor="@color/colorPurpule"
                        android:textSize="@dimen/sp_16" />

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/rivJobImage"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_margin="@dimen/dp_05"
                        android:scaleType="centerCrop"
                        android:src="@drawable/car_tyre" />

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:padding="@dimen/dp_05"
                        android:text="Post Date: "
                        android:textColor="@color/colorPurpule"
                        android:textSize="@dimen/sp_16" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tvPostDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dp_05"
                        android:text="25/12/2017" />

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:padding="@dimen/dp_05"
                        android:text="Skills Required:"
                        android:textColor="@color/colorPurpule"
                        android:textSize="@dimen/sp_16" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tvSkills"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:padding="@dimen/dp_05"
                        android:text="Loren Ipsum, dolor amet ,rakasidebus "
                        android:textSize="@dimen/sp_13" />


                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_view_profile_jobseeker"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:text="View Jobseeker Profile"
                        android:textColor="@color/colorPurpule"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <com.balysv.materialripple.MaterialRippleLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_05"
                        app:mrl_rippleAlpha="0.2"
                        app:mrl_rippleColor="@color/colorPink"
                        app:mrl_rippleDelayClick="true"
                        app:mrl_rippleHover="true"
                        app:mrl_rippleOverlay="true">

                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/btn_received_proposals"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimary"
                            android:text="Received Proposals"
                            android:textAllCaps="false" />
                    </com.balysv.materialripple.MaterialRippleLayout>


                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>


    </ScrollView>
</LinearLayout>
